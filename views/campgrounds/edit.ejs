<% include ../partials/header %>

<div class="container" style="width: 50%;">

<h1 style="margin-bottom: 1rem;">Enter a new Campground</h1>

<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="post">
  <div class="form-group row">
    <label for="name" class="col-sm-2 col-form-label">Name</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="name" name="campground[name]" value="<%= campground.name %>">
    </div>
  </div>
  <div class="form-group row">
    <label for="imageUrl" class="col-sm-2 col-form-label">Image </label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="imageUrl" name="campground[image]" value="<%= campground.image %>">
    </div>
  </div>
  <div class="form-group row">
    <label for="description" class="col-sm-2 col-form-label">Description </label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="description" name="campground[description]" value="<%= campground.description %>">
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-10">
      <button type="submit" class="btn btn-primary">ADD</button>
    </div>
  </div>
  <a href="/campgrounds" class="btn btn-light btn-sm">Go Back</a>
</form>

<% include ../partials/footer%>
</div>
