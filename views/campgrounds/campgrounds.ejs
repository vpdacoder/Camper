<% include ../partials/header %>

  <div class="container">
    <header class="jumbotron">
      <div class="container">

        <h1>Welcome to Camper!</h1>
        <p>View our campgrounds</p>
        <p>
          <a href="/campgrounds/new" class="btn btn-primary btn-lg">Add New Campground</a>
        </p>
      </div>
    </header>


    <div class="row">
      <% campgrounds.forEach((campground)=>{ %>
        <div class="col-lg-3 col-md-4 col-sm-6" style="display: flex; flex-wrap: wrap; margin-bottom: 1em;">
          <div class="card" style="width: 18rem;">
            <img src="<%= campground.image %>" style="height: 15rem;">
              <div class="card-body" >
                <h4><%= campground.name %></h4>
                <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
              </div>
            </div>
            </div>
        <% }); %>

  </div>
  <% include ../partials/footer %>
