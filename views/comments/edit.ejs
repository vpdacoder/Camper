<% include ../partials/header %>

<div class="container" style="width: 50%;">



<form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
  <h1 style="margin-bottom: 1rem;">Edit</h1>
  <div class="form-group row">
    <label for="comment" class="col-sm-2 col-form-label">Comment</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="comment" name="comment[text]" value="<%= comment.text %>">
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-10">
      <input type="submit" class="btn btn-dark">
    </div>
  </div>
  <a href="/campgrounds/<%= campground_id %>" class="btn btn-light btn-sm">Go Back</a>
</form>

<% include ../partials/footer%>
</div>
